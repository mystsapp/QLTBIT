@model NhapKhoViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "MoveToEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-route-strUrl="@Model.strUrl" asp-route-id="@Model.BanGiao.Id" asp-action="Index">Danh Sách Chi Tiết - @Model.BanGiao.NguoiNhan</a></li>
                    <li class="breadcrumb-item active">Chuyển vào Kho</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<form method="post" autocomplete="off">
   

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-file text-info"></i> Chuyển vào Kho</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">

                @*<input type="hidden" asp-for="Id" />*@
                <div class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="NhapKho.TenThietBi"></label>
                        </div>
                        <div class="col-4">
                            @*<select class="form-control" asp-for="ChiTietBanGiao.ThietBiId" asp-items="@Model.ThietBis.ToSelectListItem(Model.ChiTietBanGiao.ThietBiId)"></select>*@
                            <input readonly asp-for="NhapKho.TenThietBi" value="@Model.ChiTietBanGiao.ThietBi.Name" class="form-control" />
                            <span class="text-danger" asp-validation-for="NhapKho.TenThietBi"></span>
                        </div>
                        

                        <div class="col-2">
                            <label asp-for="NhapKho.DienGiaiTB"></label>
                        </div>
                        <div class="col-4">
                            <textarea type="number" class="form-control" asp-for="NhapKho.DienGiaiTB" ></textarea>
                            <span class="text-danger" asp-validation-for="NhapKho.DienGiaiTB"></span>
                        </div>
                        

                    </div>

                    @*<div class="form-group row">

        </div>*@

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="NhapKho.NguoiNhapKho"></label>
                        </div>
                        <div class="col-4">
                            <input readonly asp-for="NhapKho.NguoiNhapKho" value="@Model.ChiTietBanGiao.BanGiao.NguoiLap" class="form-control" />
                            <span class="text-danger" asp-validation-for="NhapKho.NguoiNhapKho"></span>
                        </div>
                        

                        <div class="col-2">
                            <label asp-for="NhapKho.NgaySuDung"></label>
                        </div>
                        <div class="col-4">
                            <input type="text" readonly asp-for="NhapKho.NgaySuDung" value="@Model.ChiTietBanGiao.NgayGiao" class="form-control" />
                            <span class="text-danger" asp-validation-for="NhapKho.NgaySuDung"></span>
                        </div>
                        
                    </div>

                    @*<div class="form-group row">

        </div>*@

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="NhapKho.NguoiSuDung"></label>
                        </div>
                        <div class="col-4">
                            <input readonly asp-for="NhapKho.NguoiSuDung" value="@Model.ChiTietBanGiao.BanGiao.NguoiNhan" class="form-control" />
                            <span class="text-danger" asp-validation-for="NhapKho.NguoiSuDung"></span>
                        </div>
                        

                        <div class="col-2">
                            <label asp-for="NhapKho.LyDo"></label>
                        </div>
                        <div class="col-4">
                            <textarea asp-for="NhapKho.LyDo" class="form-control"></textarea>
                            <span class="text-danger" asp-validation-for="NhapKho.LyDo"></span>
                        </div>
                        
                    </div>

                    @*<div class="form-group row">

        </div>*@

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="NhapKho.KhoVanPhong"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="NhapKho.KhoVanPhong" />
                            <span class="text-danger" asp-validation-for="NhapKho.KhoVanPhong"></span>
                        </div>
                        
                        
                        <div class="col-2">
                            <label asp-for="NhapKho.ThanhLy"></label>
                        </div>
                        <div class="col-4">
                            <input type="checkbox" asp-for="NhapKho.ThanhLy" disabled/>
                            <span class="text-danger" asp-validation-for="NhapKho.ThanhLy"></span>
                        </div>
                        

                    </div>
                    
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="NhapKho.NgayThanhLy"></label>
                        </div>
                        <div class="col-4">
                            <input type="text" class="form-control" asp-for="NhapKho.NgayThanhLy" readonly/>
                            <span class="text-danger" asp-validation-for="NhapKho.NgayThanhLy"></span>
                        </div>
                        
                        
                        <div class="col-2">
                            <label asp-for="NhapKho.NguoiThanhLy"></label>
                        </div>
                        <div class="col-4">
                            <input readonly class="form-control" asp-for="NhapKho.NguoiThanhLy" />
                            <span class="text-danger" asp-validation-for="NhapKho.NguoiThanhLy"></span>
                        </div>
                        

                    </div>

                    <input type="hidden" asp-for="NhapKho.CTBGId" value="@Model.ChiTietBanGiao.Id" />
                    @*<input type="hidden" asp-for="BanGiao" value="@Model.BanGiao" />*@
                    <input type="hidden" asp-for="khuVuc" />

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-route-strUrl="@Model.strUrl" asp-route-id="@Model.BanGiao.Id" asp-action="Index"><i class="fas fa-backward"></i></a>
                    </div>
                </div>


            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/Admin/ChiTietBanGiao/moveToWareHouseController.js"></script>
        <script>

            $(function () {
                $("#datepicker").datepicker({
                    dateFormat: 'dd/mm/yy'
                });
            });
        </script>
    }
}

