@model ChiTietBanGiaoViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "Details";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Xem Chi Tiết</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-route-id="@Model.BanGiao.Id" asp-route-strUrl="@Model.strUrl" asp-action="Index">Danh Sách Chi Tiết</a></li>
                    <li class="breadcrumb-item active">Chi Tiết Bàn Giao - @Model.BanGiao.NguoiNhan</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list text-info"></i> Chi Tiết Bàn Giao - @Model.BanGiao.NguoiNhan</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <div class="p-4 border rounded">

                <input type="hidden" asp-for="@Model.strUrl" />

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.ThietBiId"></label>
                    </div>
                    <div class="col-4">
                        <select class="form-control" disabled asp-for="ChiTietBanGiao.ThietBiId" asp-items="@Model.ThietBis.ToSelectListItem(Model.ChiTietBanGiao.ThietBiId)"></select>
                    </div>

                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.SoLuong"></label>
                    </div>
                    <div class="col-4">
                        <input type="number" class="form-control" asp-for="ChiTietBanGiao.SoLuong" readonly />
                    </div>

                </div>

                @*<div class="form-group row">

                    </div>*@

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.DonGia"></label>
                    </div>
                    <div class="col-4">
                        <input type="number" asp-for="ChiTietBanGiao.DonGia" class="form-control" readonly />
                    </div>

                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.BaoHanhDen"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="ChiTietBanGiao.BaoHanhDen" class="form-control maskInput" id="datepicker" disabled />
                    </div>
                </div>

                @*<div class="form-group row">

                    </div>*@

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.GhiChu"></label>
                    </div>
                    <div class="col-4">
                        <textarea asp-for="ChiTietBanGiao.GhiChu" class="form-control" readonly></textarea>
                    </div>

                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.TinhTrang"></label>
                    </div>
                    <div class="col-4">
                        @*<input type="checkbox" asp-for="ChiTietBanGiao.TinhTrang" disabled />*@
                        @if (Model.ChiTietBanGiao.TinhTrang)
                        {
                            <span class="badge badge-success">Đang sử dụng</span>
                        }
                        else
                        {
                            <span class="badge badge-warning text-white">Không còn sử dụng</span>
                        }
                    </div>
                </div>

                @*<div class="form-group row">

                    </div>*@

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.DienGiai"></label>
                    </div>
                    <div class="col-4">
                        <textarea class="form-control" asp-for="ChiTietBanGiao.DienGiai" readonly></textarea>
                    </div>

                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.ChuyenSuDung"></label>
                    </div>
                    <div class="col-4">
                        @if (Model.ChiTietBanGiao.ChuyenSuDung)
                        {

                            <span class="badge badge-warning">Đã Chuyển</span>
                        }
                        else
                        {
                            if (!Model.ChiTietBanGiao.TinhTrang)
                            {
                                <span class="badge badge-warning text-white">Chưa Chuyển</span>
                            }
                            else
                            {
                                <span class="badge badge-success text-white">Đang Sử Dụng</span>
                            }
                        }
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ChiTietBanGiao.NgayGiao"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" readonly asp-for="ChiTietBanGiao.NgayGiao" />
                    </div>
                </div>

                <div class="form-group">
                    @*<button type="submit" asp-route-banGiaoId="@Model.BanGiao.Id" class="btn btn-primary"><i class="fas fa-edit"></i></button>*@
                    <a class="btn btn-primary btnEdit" data-move="@Model.ChiTietBanGiao.ChuyenSuDung" asp-action="Edit" asp-route-banGiaoId="@Model.BanGiao.Id" asp-route-id="@Model.ChiTietBanGiao.Id" asp-route-strUrl="@Model.strUrl"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-success" asp-route-id="@Model.BanGiao.Id" asp-route-strUrl="@Model.strUrl" asp-action="Index"><i class="fas fa-backward"></i></a>
                </div>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


@section Scripts{
    @{

        <script>

            $(function () {
                $("#datepicker").datepicker({
                    dateFormat: 'dd/mm/yy'
                });


                var chuyenSuDung = $('.btnEdit').data('move');

                if (chuyenSuDung === 'True') {
                    //$(this).on('click', function(e) {
                    //    e.preventDefault();

                    //});
                    $('.btnEdit').addClass('disabled').removeAttr("href");
                }

            });
        </script>
    }
}

