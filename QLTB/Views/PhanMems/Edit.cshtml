@model PhanMemViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "Edit";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập Nhật</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh Sách Phần Mềm</a></li>
                    <li class="breadcrumb-item active">Cập Nhật Phần Mềm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-edit text-info"></i> Cập Nhật Phần Mềm</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form method="post" autocomplete="off" enctype="multipart/form-data">
                <div class="p-4 border rounded row">

                    <input type="hidden" asp-for="PhanMem.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col-8">

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="PhanMem.Name"></label>
                            </div>
                            <div class="col-8">
                                <input class="form-control" asp-for="PhanMem.Name" />
                            </div>
                            <span class="text-danger" asp-validation-for="PhanMem.Name"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="LoaiPhanMems"></label>
                            </div>
                            <div class="col-8">
                                <select asp-for="@Model.PhanMem.LoaiPMId" asp-items="Model.LoaiPhanMems.ToSelectListItem(Model.PhanMem.LoaiPMId)" class="form-control"></select>
                            </div>
                        </div>



                        <div class="form-group ">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                            <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
                        </div>

                    </div>
                </div>
            </form>


        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

