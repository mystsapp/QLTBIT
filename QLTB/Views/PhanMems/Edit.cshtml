@model PhanMemViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "Edit";
}


<h2 class="text-info">Cập Nhật Phần Mềm</h2>

<form method="post" autocomplete="off" enctype="multipart/form-data">
    <div class="p-4 border rounded row">

        <input type="hidden" asp-for="PhanMem.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhanMem.TenPM"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="PhanMem.TenPM" />
                </div>
                <span class="text-danger" asp-validation-for="PhanMem.TenPM"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="LoaiPhanMems"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.PhanMem.LoaiPMId" asp-items="Model.LoaiPhanMems.ToSelectListItem(Model.PhanMem.LoaiPMId)" class="form-control"></select>
                </div>
            </div>



            <div class="form-group ">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

