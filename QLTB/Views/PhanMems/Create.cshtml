@model PhanMemViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "Create";
}


<h2 class="text-info">Thêm Mới Phần Mềm</h2>

<form method="post" autocomplete="off">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhanMem.TenPM"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="PhanMem.TenPM" />
            </div>
            <span class="text-danger" asp-validation-for="PhanMem.TenPM"></span>
        </div>
                
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LoaiPhanMems"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.PhanMem.LoaiPMId" asp-items="Model.LoaiPhanMems.ToSelectListItem(Model.PhanMem.LoaiPMId)" class="form-control"></select>
                @*<select asp-for="@Model.ThietBi.LoaiThietBiId" asp-items="Model.LoaiThietBis.ToSelectListItem(Model.ThietBi.LoaiThietBiId)" class="form-control"></select>*@
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
            <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

