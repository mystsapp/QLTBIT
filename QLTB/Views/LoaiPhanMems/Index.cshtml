@model IEnumerable<LoaiPhanMem>

@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-6">
        <h2 class="text-info">Danh Sách Loại Phần Mềm</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus"></i>&nbsp; Thêm</a>
    </div>
</div>

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.GhiChu)</th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.GhiChu)</td>

                <partial name="_TableButtonPartial" model="item.Id">

            </tr>
        }
    </table>
</div>