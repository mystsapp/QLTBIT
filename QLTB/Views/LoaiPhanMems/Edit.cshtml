@model LoaiPhanMem
@{
    ViewData["Title"] = "Edit";
}



<h2 class="text-info">Cập Nhật Loại Phần Mềm</h2>

<form asp-action="Edit" method="post" autocomplete="off">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Name" />
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="GhiChu"></label>
            </div>
            <div class="col-5">
                <textarea class="form-control" asp-for="GhiChu" ></textarea>
            </div>
            <span class="text-danger" asp-validation-for="GhiChu"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
            <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

