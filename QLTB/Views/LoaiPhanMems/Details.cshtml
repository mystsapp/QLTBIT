@model LoaiPhanMem
@{
    ViewData["Title"] = "Details";
}


<h2 class="text-info">Loại Phần Chi Tiết</h2>

<div class="p-4 border rounded">

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-5">
            <input class="form-control" readonly asp-for="Name" />
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="GhiChu"></label>
        </div>
        <div class="col-5">
            <textarea class="form-control" readonly asp-for="GhiChu" ></textarea>
        </div>
    </div>

    <div class="form-group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-save"></i></a>
        <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
    </div>
</div>
