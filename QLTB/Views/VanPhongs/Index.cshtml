@model IEnumerable<VanPhong>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus"></i>&nbsp; Thêm </a>
    </div>
</div>

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.DiaChi)</th>
            <th>@Html.DisplayNameFor(m => m.DienThoai)</th>
            <th>@Html.DisplayNameFor(m => m.ChiNhanhId)</th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.DiaChi)</td>
                <td>@Html.DisplayFor(m => item.DienThoai)</td>
                <td>@Html.DisplayFor(m => item.ChiNhanh.Name)</td>

                <partial name="_TableButtonPartial" model="item.Id">

            </tr>
        }
    </table>
</div>