@model VanPhongViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "Create";
}


<h2 class="text-info">Thêm Mới Văn Phòng</h2>

<form method="post" autocomplete="off">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="VanPhong.Name"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="VanPhong.Name" />
            </div>
            <span class="text-danger" asp-validation-for="VanPhong.Name"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="VanPhong.DiaChi"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="VanPhong.DiaChi" />
            </div>
            <span class="text-danger" asp-validation-for="VanPhong.DiaChi"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="VanPhong.DienThoai"></label>
            </div>
            <div class="col-5">
                <textarea class="form-control" asp-for="VanPhong.DienThoai"></textarea>
            </div>
            <span class="text-danger" asp-validation-for="VanPhong.DienThoai"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ChiNhanhs"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.VanPhong.ChiNhanhId" asp-items="Model.ChiNhanhs.ToSelectListItem(Model.VanPhong.ChiNhanhId)" class="form-control"></select>
                @*<select asp-for="@Model.ThietBi.LoaiThietBiId" asp-items="Model.LoaiThietBis.ToSelectListItem(Model.ThietBi.LoaiThietBiId)" class="form-control"></select>*@
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
            <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

