@model VanPhongViewModel

<h2 class="text-info">Chi Tiết Văn Phòng</h2>

<div class="p-4 border rounded row">


    <div class="col-8">

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="VanPhong.Name"></label>
            </div>
            <div class="col-8">
                <input class="form-control" asp-for="VanPhong.Name" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="VanPhong.DiaChi"></label>
            </div>
            <div class="col-8">
                <input class="form-control" asp-for="VanPhong.DiaChi" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="VanPhong.DienThoai"></label>
            </div>
            <div class="col-8">
                <textarea class="form-control" asp-for="VanPhong.DienThoai" readonly></textarea>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ChiNhanhs"></label>
            </div>
            <div class="col-8">
                <input asp-for="VanPhong.ChiNhanh.MaChiNhanh" class="form-control" readonly />
            </div>
        </div>



        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.VanPhong.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
            <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
        </div>
    </div>
</div>