@model LoaiThietBi
@{
    ViewData["Title"] = "Delete";
}


<h2 class="text-info">Xóa ?</h2>

<form asp-action="Delete" method="post">
    <div class="p-4 border rounded">

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input class="form-control" readonly asp-for="Name" />
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="GhiChu"></label>
            </div>
            <div class="col-5">
                <textarea class="form-control" readonly asp-for="GhiChu" ></textarea>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-danger" asp-route-id="@Model.Id" ><i class="fas fa-trash-alt"></i></button>
            <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
        </div>
    </div>
</form>
