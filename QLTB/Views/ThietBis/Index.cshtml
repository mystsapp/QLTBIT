@model IEnumerable<ThietBi>

@{
    ViewData["Title"] = "Index";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <a class="btn btn-outline-info" asp-action="Create"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Thiết Bị</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list-alt text-info"></i> Danh Sách Thiết Bị</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <div>
                <table class="table table-striped border">
                    <tr class="table-info">
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Gia)</th>
                        <th>@Html.DisplayNameFor(m => m.TrangThai)</th>
                        <th>@Html.DisplayNameFor(m => m.LoaiThietBiId)</th>
                        <th>@Html.DisplayNameFor(m => m.BaoHanh)/Tháng</th>
                        <th>@Html.DisplayNameFor(m => m.DienGiai)</th>
                        <th></th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@string.Format("{0:0,0}", item.Gia) VNĐ</td>
                            <td>@Html.DisplayFor(m => item.TrangThai)</td>
                            <td>@Html.DisplayFor(m => item.LoaiThietBi.Name)</td>
                            <td>@Html.DisplayFor(m => item.BaoHanh)</td>
                            <td>@Html.DisplayFor(m => item.DienGiai)</td>

                            <partial name="_TableButtonPartial" model="item.Id">

                        </tr>
                    }
                </table>
            </div>

        </div>
        <!-- /.card-body -->
        
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
