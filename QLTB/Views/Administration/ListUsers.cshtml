@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "All Users";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <a class="btn btn-outline-info" asp-action="Register" asp-controller="Account"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Danh Sách Account</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list-alt text-info"></i>Danh Sách Account</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div>
                    <table class="table table-striped border">
                        <tr class="table-info">
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th>@Html.DisplayNameFor(m => m.UserName)</th>
                            <th>@Html.DisplayNameFor(m => m.PhongBan)</th>
                            <th>@Html.DisplayNameFor(m => m.ChiNhanhId)</th>
                            <th>@Html.DisplayNameFor(m => m.VanPhong)</th>
                            <th>@Html.DisplayNameFor(m => m.Khoi)</th>
                            <th></th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <td>@Html.DisplayFor(m => item.UserName)</td>
                                <td>@Html.DisplayFor(m => item.PhongBan)</td>
                                <td>@Html.DisplayFor(m => item.ChiNhanh.MaChiNhanh)</td>
                                <td>@Html.DisplayFor(m => item.VanPhong)</td>
                                <td>@Html.DisplayFor(m => item.Khoi)</td>

                                <td>
                                    <div class="btn-group text-white" role="group">
                                        <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post">
                                            <a class="btn btn-primary btn-sm" asp-action="EditUser" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                                            @*<a class="btn btn-success" href="@url"><i class="fas fa-list"></i></a>*@
                                            <a class="btn btn-success btn-sm" asp-action="DetailUser" asp-route-id="@item.Id"><i class="fas fa-list"></i></a>
                                            
                                            <span id="confirmDeleteSpan_@item.Id" style="display: none">
                                                <span class="text-dark">Are you sure you want to delete?</span>
                                                <button type="submit" class="btn btn-danger">Yes</button>
                                                <a href="#" class="btn btn-primary" onclick="confirmDelete('@item.Id', false)">No</a>
                                            </span>

                                            <span id="deleteSpan_@item.Id">
                                                <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id', true)"><i class="fas fa-trash-alt"></i></a>
                                            </span>
                                        </form>
                                    </div>
                                </td>

                            </tr>
                        }
                    </table>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        No users created yet
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Use the button above to create a user</h5>
                    </div>
                </div>
            }

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section  Scripts{
    <script src="~/js/Admin/User/listUsersController.js"></script>
}