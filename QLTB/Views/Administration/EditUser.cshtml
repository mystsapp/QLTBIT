@model EditUserViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật User</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="ListUsers">Danh Sách User</a></li>
                    <li class="breadcrumb-item active">Cập nhật User</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Cập nhật User</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <div class="card-body login-card-body" style="border-radius: 25px;">

                <form method="post" autocomplete="off">
                    <div class="p-4 border rounded">
                        @*<input type="hidden" asp-for="strUrl" />*@
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group row">
                            <div class="col-2">
                                <label asp-for="UserName"></label>
                            </div>
                            <div class="input-group mb-3 col-4">

                                <input asp-for="UserName" class="form-control" autofocus>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="col-2">
                                <label asp-for="Password"></label>
                            </div>
                            <div class="input-group mb-3 col-4">

                                <input asp-for="Password" class="form-control">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">

                            <div class="col-2">
                                <label asp-for="Email"></label>
                            </div>
                            <div class="input-group mb-3 col-4">
                                <input asp-for="Email" class="form-control">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-mail-bulk"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-2">
                                <label asp-for="PhoneNumber"></label>
                            </div>
                            <div class="input-group mb-3 col-4">
                                <input asp-for="PhoneNumber" class="form-control">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-phone-alt"></span>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="form-group row">


                            <div class="col-2">
                                <label asp-for="Name"></label>
                            </div>
                            <div class="input-group mb-3 col-4">
                                <input asp-for="Name" class="form-control">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user-alt"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-2">
                                <label asp-for="PhongBan"></label>
                            </div>
                            <div class="input-group mb-3 col-4">
                                <input asp-for="PhongBan" class="form-control">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-home"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="PhongBan" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">


                            <div class="col-2">
                                <label asp-for="ChiNhanhId"></label>
                            </div>
                            <div class="input-group mb-3 col-4">
                                <select asp-for="@Model.ChiNhanhId" asp-items="Model.ChiNhanhs.ToSelectListItem(Model.ChiNhanhId)" class="form-control ddlChiNhanh"></select>
                                @*<select asp-for="ChiNhanhId" class="form-control border-input ddlChiNhanh"
                                        asp-items="@(new SelectList(ViewBag.ChiNhanhs,"Id","Name"))">
                                    
                                </select>*@

                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-2">
                                <label asp-for="VanPhong"></label>
                            </div>
                            <div class="input-group mb-3 col-4">
                                @*<select asp-for="VanPhong" class="form-control ddlVanPhong"></select>*@
                                <select asp-for="VanPhong" asp-items="Model.VanPhongs.ToSelectListItemString(Model.VanPhong)" class="form-control ddlVanPhong"></select>
                                @*<select asp-for="VanPhong" class="form-control border-input ddlVanPhong"
                                        asp-items="@(new SelectList(ViewBag.VanPhongs,"Name","Name"))">
                                </select>*@

                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-mail-bulk"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="VanPhong" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            

                            <div class="col-2">
                                <label asp-for="Khoi"></label>
                            </div>
                            <div class="input-group mb-3 col-4">
                                <select class="form-control" asp-for="Khoi">
                                    <option value="OB">OB</option>
                                    <option value="ND">ND</option>
                                    <option value="--None--">--None--</option>
                                </select>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-phone-alt"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-2">
                                <label asp-for="TinhTrang"></label>
                            </div>
                            <div class="input-group mb-3 col-4">

                                <input asp-for="TinhTrang" >
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                                <span asp-validation-for="TinhTrang" class="text-danger"></span>

                            </div>

                        </div>

                        <div class="row">

                            <!-- /.col -->
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                            <a class="btn btn-success" asp-action="ListUsers"><i class="fas fa-backward"></i></a>
                            <!-- /.col -->
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h3>User Roles</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.Roles.Any())
                            {
                                foreach (var role in Model.Roles)
                                {
                                    <h5 class="card-title">@role</h5><br />
                                }
                            }
                            else
                            {
                                <h5 class="card-title">None at the moment</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-route-userId="@Model.Id" asp-action="ManageUserRoles" asp-controller="Administration" class="btn btn-outline-primary" title="Update Or Remote">Manage Users</a>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h3>User Claims</h3>
                        </div>
                        <div class="card-body">
                            @if (Model.Claims.Any())
                            {
                                foreach (var claim in Model.Claims)
                                {
                                    <h5 class="card-title">@claim</h5><br />
                                }
                            }
                            else
                            {
                                <h5 class="card-title">None at the moment</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-route-userId="@Model.Id" asp-action="ManageUserClaims" asp-controller="Administration" class="btn btn-outline-primary" title="Update Or Remote">Manage Claims</a>
                        </div>
                    </div>

                </form>



            </div>
            <!-- /.login-card-body -->
        </div>



    </div>
    <!-- /.card-body -->
    <!-- /.card -->

</section>
<!-- /.content -->
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script src="~/js/Admin/User/editController.js"></script>
    }

}