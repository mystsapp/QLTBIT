@model NhanVienViewModel


<h2 class="text-info">Chi Tiết Nhân Viên </h2>

<div class="p-4 border rounded row">


    <div class="col-8">

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NhanVien.HoTen"></label>
            </div>
            <div class="col-8">
                <input class="form-control" asp-for="NhanVien.HoTen" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NhanVien.PhongBan"></label>
            </div>
            <div class="col-8">
                <input asp-for="NhanVien.PhongBan" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ChiNhanhs"></label>
            </div>
            <div class="col-8">
                <input class="form-control" asp-for="NhanVien.ChiNhanh.MaChiNhanh" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NhanVien.VanPhong"></label>
            </div>
            <div class="col-8">
                <input asp-for="NhanVien.VanPhong" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="NhanVien.Khoi"></label>
            </div>
            <div class="col-8">
                <input asp-for="NhanVien.Khoi" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.NhanVien.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
            <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
        </div>
    </div>
</div>