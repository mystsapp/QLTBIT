@model NhanVienViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "Create";
    var roles = (List<IdentityRole>)ViewBag.Roles;
    var roleNames = (string)ViewBag.RoleNames;

}


<input type="hidden" id="roles" data-roles="@roleNames" />
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh Sách Nhân Viên</a></li>
                    <li class="breadcrumb-item active">Thêm Mới Nhân Viên</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm Mới Nhân Viên</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off">
                <div class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="NhanVien.Name"></label>
                        </div>
                        <div class="col-5">
                            <input class="form-control" asp-for="NhanVien.Name" />
                            <span class="text-danger" asp-validation-for="NhanVien.Name"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="NhanVien.PhongBan"></label>
                        </div>
                        <div class="col-5">
                            <input class="form-control" asp-for="NhanVien.PhongBan" />
                            <span class="text-danger" asp-validation-for="NhanVien.PhongBan"></span>
                        </div>

                    </div>

                    <div class="form-group row" id="divVP">
                        <div class="col-2">
                            <label asp-for="NhanVien.VanPhongId"></label>
                        </div>
                        <div class="col-5">
                            <select asp-for="@Model.NhanVien.VanPhongId" asp-items="Model.VanPhongs.ToSelectListItem(Model.NhanVien.VanPhongId)" class="form-control ddlChiNhanh"></select>
                            <span class="text-danger" asp-validation-for="NhanVien.VanPhongId"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="NhanVien.Khoi"></label>
                        </div>
                        <div class="col-5">
                            <select class="form-control" asp-for="NhanVien.Khoi">
                                <option value="OB">OB</option>
                                <option value="ND">ND</option>
                                <option value="">--None--</option>
                            </select>
                            <span class="text-danger" asp-validation-for="NhanVien.Khoi"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
                    </div>
                </div>
            </form>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->



@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");

        @*<script src="~/js/Admin/NhanVien/createController.js"></script>*@
    }

}

