@model BanGiaoCreateViewModel

@{
    ViewData["Title"] = "Details";
}




<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Xem Chi Tiết</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh Sách Bàn Giao</a></li>
                    <li class="breadcrumb-item active">Xem Bàn Giao - @Model.BanGiao.NguoiNhan</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list text-info"></i> Xem Bàn Giao - @Model.BanGiao.NguoiNhan</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <div class="p-4 border rounded">

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="BanGiao.NguoiLap"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="BanGiao.NguoiLap" readonly />
                    </div>

                    <div class="col-2">
                        <label asp-for="BanGiao.NguoiNhan"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="BanGiao.NguoiNhan" readonly />
                    </div>

                </div>

                @*<div class="form-group row">

            </div>*@

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="BanGiao.ChiNhanhId"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="BanGiao.ChiNhanh.Name" class="form-control" readonly />
                    </div>

                    <div class="col-2">
                        <label asp-for="BanGiao.VanPhong"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="BanGiao.VanPhong" class="form-control" readonly />
                    </div>
                </div>

                @*<div class="form-group row">

            </div>*@

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="BanGiao.Khoi"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="BanGiao.Khoi" readonly />
                    </div>

                    <div class="col-2">
                        <label asp-for="BanGiao.PhongBan"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="BanGiao.PhongBan" readonly />
                    </div>
                </div>

                @*<div class="form-group row">

            </div>*@

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="BanGiao.TinhTrang"></label>
                    </div>
                    <div class="col-4">
                        @if (Model.BanGiao.TinhTrang)
                        {
                            <span class="badge badge-success">Đã bàn giao</span>
                        }
                        else
                        {
                            <span class="badge badge-warning text-white">Chưa bàn giao</span>
                        }
                    </div>

                    <div class="col-2">
                        <label asp-for="BanGiao.LyDo"></label>
                    </div>
                    <div class="col-4">
                        <textarea class="form-control" asp-for="BanGiao.LyDo" readonly></textarea>
                    </div>
                </div>

                @*<div class="form-group row">

            </div>*@

                <div class="form-group">
                    <a asp-route-id="@Model.BanGiao.Id" asp-action="Edit" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
                </div>
            </div>


        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->



