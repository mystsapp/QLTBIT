@model BanGiaoCreateViewModel
@using QLTB.Extensions

@{
    ViewData["Title"] = "Create";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh Sách Bàn Giao</a></li>
                    <li class="breadcrumb-item active">Thêm Mới Bàn Giao</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm Mới Bàn Giao</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off">
                <div class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="BanGiao.NguoiLap"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="BanGiao.NguoiLap" />
                        </div>
                        <span class="text-danger" asp-validation-for="BanGiao.NguoiLap"></span>

                        <div class="col-2">
                            <label asp-for="BanGiao.NguoiNhan"></label>
                        </div>
                        <div class="col-4">
                            @*<select class="form-control select2 select2-hidden-accessible" asp-for="BanGiao.NguoiNhan" asp-items="@Model.NhanViens.ToSelectListItemString(Model.BanGiao.NguoiNhan)"></select>*@
                            <select class="form-control select2 select2-hidden-accessible" asp-for="BanGiao.NguoiNhan" asp-items="@Model.NhanViens.ToSelectListItemString(Model.BanGiao.NguoiNhan)" style="width: 100%;">
                            </select>

                        </div>
                        <span class="text-danger" asp-validation-for="BanGiao.NguoiNhan"></span>

                    </div>

                    @*<div class="form-group row">

                        </div>*@

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="BanGiao.ChiNhanhId"></label>
                        </div>
                        <div class="col-4">
                            @*<select asp-for="@Model.BanGiao.ChiNhanhId" asp-items="Model.ChiNhanhs.ToSelectListItem(Model.BanGiao.ChiNhanhId)" class="form-control ddlChiNhanh"></select>*@
                            <select class="form-control ddlChiNhanh select2 select2-hidden-accessible" asp-for="@Model.BanGiao.ChiNhanhId" asp-items="Model.ChiNhanhs.ToSelectListItem(Model.BanGiao.ChiNhanhId)" style="width: 100%;" >
                            </select>
                        </div>

                        <div class="col-2">
                            <label asp-for="BanGiao.VanPhong"></label>
                        </div>
                        <div class="col-4">
                            @*<select asp-for="BanGiao.VanPhong" class="form-control ddlVanPhong"></select>*@
                            <select class="form-control ddlVanPhong select2 select2-hidden-accessible" asp-for="BanGiao.VanPhong" style="width: 100%;" >
                            </select>
                        </div>
                        <span class="text-danger" asp-validation-for="BanGiao.VanPhong"></span>
                    </div>

                    @*<div class="form-group row">

                        </div>*@

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="BanGiao.Khoi"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="BanGiao.Khoi" class="form-control">
                                <option value="OB">OB</option>
                                <option value="ND">ND</option>
                                <option value="">--None--</option>
                            </select>
                        </div>
                        <span class="text-danger" asp-validation-for="BanGiao.Khoi"></span>

                        <div class="col-2">
                            <label asp-for="BanGiao.PhongBan"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="BanGiao.PhongBan" />
                        </div>
                        <span class="text-danger" asp-validation-for="BanGiao.PhongBan"></span>
                    </div>

                    @*<div class="form-group row">

                        </div>*@

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="BanGiao.TinhTrang"></label>
                        </div>
                        <div class="col-4">
                            <input type="checkbox" asp-for="BanGiao.TinhTrang" />
                        </div>

                        <div class="col-2">
                            <label asp-for="BanGiao.LoaiThietBi"></label>
                        </div>
                        <div class="col-4">
                            @*<select asp-for="BanGiao.LoaiThietBi" class="form-control" asp-items="@Model.LoaiThietBis.ToSelectListItemString(Model.BanGiao.LoaiThietBi)"></select>*@
                            <select class="form-control ddlChiNhanh select2 select2-hidden-accessible" asp-for="BanGiao.LoaiThietBi" class="form-control" asp-items="@Model.LoaiThietBis.ToSelectListItemString(Model.BanGiao.LoaiThietBi)" style="width: 100%;">
                            </select>
                        </div>


                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="BanGiao.LyDo"></label>
                        </div>
                        <div class="col-4">
                            <textarea class="form-control" asp-for="BanGiao.LyDo"></textarea>
                        </div>
                        <span class="text-danger" asp-validation-for="BanGiao.LyDo"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
                    </div>
                </div>
            </form>



        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>
            $(function () {
                //Initialize Select2 Elements
