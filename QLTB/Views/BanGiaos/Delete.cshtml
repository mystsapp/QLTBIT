@model BanGiaoCreateViewModel

@{
    ViewData["Title"] = "Details";
}



<h2 class="text-info">Xóa ?</h2>

<form method="post">
    <div class="p-4 border rounded">

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="BanGiao.NguoiLap"></label>
            </div>
            <div class="col-4">
                <input class="form-control" asp-for="BanGiao.NguoiLap" readonly />
            </div>

            <div class="col-2">
                <label asp-for="BanGiao.NguoiNhan"></label>
            </div>
            <div class="col-4">
                <input class="form-control" asp-for="BanGiao.NguoiNhan" readonly />
            </div>

        </div>

        @*<div class="form-group row">

            </div>*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="BanGiao.ChiNhanhId"></label>
            </div>
            <div class="col-4">
                <input asp-for="BanGiao.ChiNhanh.Name" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="BanGiao.VanPhong"></label>
            </div>
            <div class="col-4">
                <input asp-for="BanGiao.VanPhong" class="form-control" readonly />
            </div>
        </div>

        @*<div class="form-group row">

            </div>*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="BanGiao.Khoi"></label>
            </div>
            <div class="col-4">
                <input class="form-control" asp-for="BanGiao.Khoi" readonly />
            </div>

            <div class="col-2">
                <label asp-for="BanGiao.PhongBan"></label>
            </div>
            <div class="col-4">
                <input class="form-control" asp-for="BanGiao.PhongBan" readonly />
            </div>
        </div>

        @*<div class="form-group row">

            </div>*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="BanGiao.TinhTrang"></label>
            </div>
            <div class="col-4">
                @if (Model.BanGiao.TinhTrang)
                {
                    <span class="badge badge-success">Đã bàn giao</span>
                }
                else
                {
                    <span class="badge badge-warning text-white">Chưa bàn giao</span>
                }
            </div>

            <div class="col-2">
                <label asp-for="BanGiao.LyDo"></label>
            </div>
            <div class="col-4">
                <textarea class="form-control" asp-for="BanGiao.LyDo" readonly></textarea>
            </div>
        </div>

        @*<div class="form-group row">

            </div>*@

        <div class="form-group">
            <button type="submit" asp-route-id="@Model.BanGiao.Id" asp-action="Delete" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
            <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
        </div>
    </div>

</form>