    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="NhapKho.NguoiThanhLy"></label>
        </div>
        <div class="col-4">
            <input class="form-control" asp-for="NhapKho.NguoiThanhLy" readonly />
        </div>
    </div>

</div>

