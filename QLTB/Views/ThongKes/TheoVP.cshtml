

@{
    ViewData["Title"] = "TheoVP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thống kê theo VP</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            @*<input type="hidden" asp-for="Id" />*@
            <div class="p-4 border rounded">

                <form asp-action="ExportVP" id="frmSearch" method="post" autocomplete="off">

                    <div class="container" style="height:110px; background-color: aliceblue;">
                        @* we will add search criteria *@

                        <div class="col-12">
                            <div class="row" style="padding-top: 10px;">

                                <div class="col-2">
                                    Từ Ngày
                                </div>
                                <div class="col-3">
                                    <input name="searchFromDate" class="form-control maskInput datepicker" id="txtFromDate"/>
                                </div>

                                <div class="col-2">

                                </div>

                                <div class="col-2">
                                    Đến Ngày
                                </div>
                                <div class="col-3">
                                    @*@Html.Editor("searchDate", new { htmlAttributes = new { @class = "form-control maskInput", @id = "datepicker" } })*@
                                    <input name="searchToDate" class="form-control maskInput datepicker" id="txtToDate"/>
                                </div>

                            </div>
                        </div>

                        <div class="col-12">
                            <div class="row" style="padding-top: 10px;">

                                <div class="col-2">
                                    Văn Phòng
                                </div>
                                <div class="col-3">
                                    <select class="form-control" id="txtVp" name="vP" asp-items="@(new SelectList(ViewBag.VPs,"Name","Name"))"></select>
                                </div>

                                <div class="col-2">

                                </div>

                                <div class="col-2">
                                </div>
                                <div class="col-3">

                                    <button type="button" id="btnSearch" class="btn btn-primary" >
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                    <button type="button" class="btn btn-success" id="btnExport"><i class="fa-file-excel-o"></i> Export</button>

                                </div>

                            </div>
                        </div>
                    </div>
                </form>

            </div>

        </div>


    </div>
    <!-- /.card-body -->
    <!-- /.card -->

</section>
<!-- /.content -->

<div id="ctbgList" class="container">

</div>

@section Scripts{
    <script src="~/js/ThongKe/TheoVPController.js"></script>
    <script>

        $(function () {
            $("#datepicker").datepicker({
                dateFormat: 'dd/mm/yy'
            });
        });
    </script>
}

