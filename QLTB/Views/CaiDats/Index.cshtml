@model CaiDatIndexViewModel

@{
    ViewData["Title"] = "Index";
    var a = string.IsNullOrEmpty(Model.BanGiao.NguoiNhan) ? "Nguoi Nhan" : Model.BanGiao.NguoiNhan;

}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <a class="btn btn-outline-info" asp-action="Create" asp-route-banGiaoId="@Model.BanGiao.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Chi Tiết Cài Đặt - @a</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list-alt text-info"></i> Chi Tiết Cài Đặt - @a</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <div>
                <table class="table table-striped border">
                    <tr class="table-info">
                        <th>@Html.DisplayNameFor(m => m.CaiDats.FirstOrDefault().BanGiaoId)</th>
                        <th>@Html.DisplayNameFor(m => m.CaiDats.FirstOrDefault().PhanMemId)</th>
                        @*<th>@Html.DisplayNameFor(m => m.CaiDats.FirstOrDefault().DonGia)</th>
                    <th>@Html.DisplayNameFor(m => m.CaiDats.FirstOrDefault().ThoiGianSuDung)</th>*@
                        <th></th>

                    </tr>

                    @foreach (var item in Model.CaiDats)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.BanGiao.NguoiLap)</td>
                            <td>@Html.DisplayFor(m => item.PhanMem.Name)</td>
                            @*<td>@Html.DisplayFor(m => item.DonGia)</td>
                        <td>@Html.Raw(item.ThoiGianSuDung.ToShortDateString())</td>*@

                            @*<partial name="_TableButtonPartial"  model="item.Id">*@
                            <td style="width:150px;">
                                <div class="btn-group text-white" role="group">
                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-banGiaoId="@Model.BanGiao.Id" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-edit"></i></a>
                                    @*<a class="btn btn-success" href="@url"><i class="fas fa-list"></i></a>*@
                                    <a class="btn btn-success btn-sm" asp-action="Details" asp-route-banGiaoId="@Model.BanGiao.Id" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-list"></i></a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-banGiaoId="@Model.BanGiao.Id" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>

                        </tr>
                    }
                </table>
            </div>
            <div>
                <a class="btn btn-success" href="@Model.StrUrl"><i class="fas fa-backward"></i></a>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
